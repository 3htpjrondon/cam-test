{
  "name": "wmq_v8_install",
  "description": "WMQ V8 Install on Linux",
  "json_class": "Chef::Role",
  "default_attributes": {
    "ibm": {
      "sw_repo": "",
      "sw_repo_user": "repouser",
      "sw_repo_password": "",
      "sw_repo_self_signed_cert": "true",
      "sw_repo_auth": "true"
    },
    "wmq": {
      "advanced": "false",
      "version": "8.0",
      "fixpack": "8",
      "install_dir": "/opt/mqm",
      "data_dir": "/var/mqm",
      "qmgr_dir": "/var/mqm/qmgrs",
      "log_dir": "/var/mqm/log",
      "os_users": {
        "mqm": {
          "name": "mqm",
          "gid": "mqm",
          "ldap_user": "false",
          "home": "/home/mqm",
          "comment": "MQseries User",
          "shell": "/bin/bash"
        }
      },
      "perms": "755",
      "swap_file_size": "512",
      "swap_file": "/swapfile",
      "net_core_rmem_default": "262144",
      "net_core_rmem_max": "4194304",
      "net_core_wmem_default": "262144",
      "net_ipv4_tcp_rmem": "4096    87380   4194304",
      "net_ipv4_tcp_wmem": "4096    87380   4194304",
      "net_ipv4_tcp_sack": "1",
      "net_ipv4_tcp_window_scaling": "1",
      "net_ipv4_tcp_timestamps": "1",
      "net_ipv4_tcp_keepalive_time": "7200",
      "net_ipv4_tcp_keepalive_intvl": "75",
      "net_ipv4_tcp_fin_timeout": "60",
      "net_core_rmem_default": "262144",
      "net_core_rmem_default": "0",
      "net_core_rmem_default": "10240",
      "kernel_shmmni": "4096",
      "kernel_shmall": "2097152",
      "kernel_shmmax": "268435456",
      "kernel_sem": "32 4096 32 128",
      "service_name": "mq",
      "global_mq_service": "true"
    }
  },
  "chef_type": "role",
  "run_list": [
    "recipe[wmq::prereq_check]",
    "recipe[wmq::prereq]",
    "recipe[wmq::install]",
    "recipe[wmq::fixpack]",
    "recipe[wmq::service]",
    "recipe[wmq::gather_evidence]",
    "recipe[wmq::cleanup]"
  ]
}
